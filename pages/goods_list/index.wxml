<view>
  <searchinput></searchinput>
  <tabs tabs="{{tabs}}" bindtabsItemChange="handleTabsItemChange"></tabs>
  <block wx:if="{{tabs[0].isActive}}">
    <view class="first_tab">
      <navigator class="goods_item"
      wx:for="{{goodsList}}"
      wx:key="goods_id"
      url="/pages/goods_detail/index?goods_id={{item.goods_id}}"
      >
        <!-- 左侧图片容器 -->
        <view class="goods_img_warp">
          <image mode="widthFix" src="{{item.goods_small_logo? item.goods_small_logo : 'http://image5.suning.cn/uimg/b2c/newcatentries/0000000000-000000000160455569_1_400x400.jpg'}}"/>
        </view>
        <!-- 右侧商品容器 -->
        <view class="goods_info_warp">
          <view class="goods_name">{{item.goods_name}}</view>
          <view class="goods_price">￥500</view>
        </view>
      </navigator>
    </view>
  </block>
  <block wx:elif="{{tabs[1].isActive}}">1</block>
  <block wx:elif="{{tabs[2].isActive}}">2</block>
</view>
